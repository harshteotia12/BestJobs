@model IEnumerable<HRWebLayer.Models.SkillsModel>

@{
    ViewData["Title"] = "ViewSkills";
}

<div class="row">
          @foreach(var list in Model)
            {
                
                <div class="col-md-6">
                   <div class="card mb-4 mb-md-0">
                   <div class="card-body">
                   <p class="mt-4 mb-1" style="font-size: .77rem;">@list.SkillName 
                       @if (list.Matched)
                        {
                            <p>Matched</p>
                        } </p>
                   <div class="progress rounded" style="height: 5px;">
                   <div class="progress-bar" role="progressbar" style="width: @list.SkillProficiency%" aria-valuenow="72"aria-valuemin="0" aria-valuemax="100"></div>
                        
                    </div>
                   </div>
                   </div>
                   </div>
        }
        <hr>
        <hr>
          </div>
          <p>Observations : HaveSkills/Reqd Skills => @ViewBag.GotSkills/@ViewBag.TotalSkills</p>