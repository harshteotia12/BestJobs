@model HRWebLayer.Models.HRModel

@{
    ViewData["Title"] = "HRDetails";
}

<h1>HRDetails</h1>

<div>
    <h4>HRModel</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HRName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HRName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HRYOE)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HRYOE)
        </dd>
        <dt class = "col-sm-2">
            Email
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Orgname)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Orgname)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OrgPhoto)
        </dt>
        <dd>
			@if (@Model.OrgPhoto != null)
			{
				string imageBase64 = Convert.ToBase64String(@Model.OrgPhoto);
				string imageSrc = string.Format("data:image/gif;base64,{0}", imageBase64);
				<img src="@imageSrc" width="100" height="100" />
			}
	    </dd>
    </dl>
</div>
